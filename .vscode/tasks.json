{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Yoga Development",
      "command": "yarn",
      "args": ["${input:platform}"]
    }
  ],
  "inputs": [
    {
      "description": "Choose a platform to run",
      "id": "platform",
      "type": "pickString",
      "options": [
        { "label": "iOS", "value": "dev:native:ios" },
        { "label": "Android", "value": "dev:native:android" },
        { "label": "Web", "value": "dev:web" }
      ]
    }
  ]
}
